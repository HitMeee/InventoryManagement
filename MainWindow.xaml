<Window x:Class="InventoryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InventoryManagement.Views"
        Title="Inventory Management" Height="720" Width="1100">
    <Grid>
        <TabControl x:Name="MainTabControl">
            <TabItem x:Name="TabProducts" Header="Sản phẩm">
                <views:ProductsView />
            </TabItem>
            <TabItem x:Name="TabInventory" Header="Tồn kho">
                <views:InventoryView />
            </TabItem>
            <TabItem x:Name="TabSuppliers" Header="Nhà cung cấp">
                <views:SuppliersView />
            </TabItem>
            <TabItem x:Name="TabCustomers" Header="Khách hàng">
                <views:CustomersView />
            </TabItem>
            <TabItem x:Name="TabOrders" Header="Đơn hàng">
                <views:OrdersView />
            </TabItem>
            <TabItem x:Name="TabUsers" Header="Người dùng">
                <views:UsersView />
            </TabItem>
            <TabItem x:Name="TabReports" Header="Báo cáo">
                <views:ReportsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
