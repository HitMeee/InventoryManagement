<UserControl x:Class="InventoryManagement.Controls.PageShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InventoryManagement.Controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Height="Auto" Width="Auto">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="16" Style="{StaticResource CardStyle}">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock FontSize="20" FontWeight="SemiBold" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- SearchBox -->
                    <Grid Width="260" VerticalAlignment="Center">
                        <Border Background="#FFF" CornerRadius="8" BorderBrush="#E6E9EE" BorderThickness="1" Padding="6">
                            <DockPanel>
                                <TextBox x:Name="SearchBox" Style="{StaticResource TextBoxStyle}" Width="200" VerticalAlignment="Center" />
                                <Button Content="🔍" Style="{StaticResource PrimaryButtonStyle}" Width="36" Height="32" Margin="6,0,0,0" />
                            </DockPanel>
                        </Border>
                    </Grid>

                    <Button Content="+ Thêm mới" Style="{StaticResource PrimaryButtonStyle}" Margin="8,0,0,0" Command="{Binding AddCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Border Grid.Row="1" Margin="16" Background="Transparent">
            <Grid>
                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Margin="16" Padding="8" Background="Transparent">
            <DockPanel>
                <TextBlock Text="Ready" Foreground="Gray" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
