<Window x:Class="InventoryManagement.Views.InventoryHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử nhập xuất" 
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Lịch sử nhập xuất" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="#0F274C" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Product Info -->
        <Border Grid.Row="1" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sản phẩm" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,3"/>
                    <TextBlock x:Name="TxtProductName" Text="" FontWeight="Bold" FontSize="14" Foreground="#0F274C"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Số lượng hiện tại" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,3"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TxtCurrentQuantity" Text="" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="TxtUnit" Text="" FontWeight="Bold" FontSize="14" Foreground="#2E7D32" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Kho" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,3"/>
                    <TextBlock x:Name="TxtWarehouse" Text="" FontWeight="Bold" FontSize="14" Foreground="#0F274C"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- History DataGrid -->
        <DataGrid Grid.Row="2" x:Name="DgHistory" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  AlternatingRowBackground="#F8F9FA"
                  SelectionMode="Single"
                  RowHeight="35"
                  FontSize="13"
                  HorizontalGridLinesBrush="#E0E0E0"
                  BorderBrush="#BBDEFB"
                  BorderThickness="1"
                  VerticalAlignment="Stretch"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1565C0"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#BBDEFB"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="MinHeight" Value="35"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="8,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Setter Property="Foreground" Value="#1565C0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="140" MinWidth="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTemplateColumn Header="Loại" Width="80" MinWidth="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3" Padding="8,3" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TransactionType}" Value="IMPORT">
                                                <Setter Property="Background" Value="#E8F5E8"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TransactionType}" Value="EXPORT">
                                                <Setter Property="Background" Value="#FFF3E0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding TransactionTypeDisplay}" 
                                           FontWeight="SemiBold" FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TransactionType}" Value="IMPORT">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TransactionType}" Value="EXPORT">
                                                    <Setter Property="Foreground" Value="#F57C00"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100" MinWidth="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Người thực hiện" Binding="{Binding UserName}" Width="2*" MinWidth="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="3*" MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="Foreground" Value="#666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Close Button -->
        <Button Grid.Row="3" Content="Đóng" 
                Width="100" Height="35" 
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Background="#757575" Foreground="White" 
                BorderThickness="0" FontWeight="SemiBold"
                Click="BtnClose_Click"/>
    </Grid>
</Window>