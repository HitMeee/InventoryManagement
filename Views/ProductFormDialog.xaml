<Window x:Class="InventoryManagement.Views.ProductFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin sản phẩm" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tên sản phẩm -->
        <TextBlock Grid.Row="0" Text="Tên sản phẩm:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtName" Grid.Row="1" Height="35" FontSize="14" 
                 Padding="10,5" BorderBrush="#CCCCCC" BorderThickness="1"/>

        <!-- Số lượng -->
        <TextBlock Grid.Row="3" Text="Số lượng:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtQuantity" Grid.Row="4" Height="35" FontSize="14" 
                 Padding="10,5" BorderBrush="#CCCCCC" BorderThickness="1"/>

        <!-- Đơn vị -->
        <TextBlock Grid.Row="6" Text="Đơn vị:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtUnit" Grid.Row="7" Height="35" FontSize="14" 
                 Padding="10,5" BorderBrush="#CCCCCC" BorderThickness="1"/>

        <!-- Kho hàng -->
        <TextBlock Grid.Row="9" Text="Kho hàng:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox x:Name="CboWarehouse" Grid.Row="10" Height="35" FontSize="14"
                  Padding="10,5" BorderBrush="#CCCCCC" BorderThickness="1"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#E0E0E0" BorderThickness="0" FontSize="14" FontWeight="SemiBold"
                    Click="BtnCancel_Click" Cursor="Hand"/>
            <Button Content="Lưu" Width="100" Height="35"
                    Background="#4CAF50" Foreground="White" BorderThickness="0" 
                    FontSize="14" FontWeight="SemiBold"
                    Click="BtnSave_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
