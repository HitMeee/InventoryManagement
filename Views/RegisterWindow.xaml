<Window x:Class="InventoryManagement.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Đăng ký tài khoản" Height="500" Width="780" MinHeight="420" MinWidth="680"
    WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="InputBoxStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Margin" Value="0,6,0,6" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#22000000" BlurRadius="6" ShadowDepth="1" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="Background" Value="#E5E7EB" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="6" BorderBrush="#D1D5DB" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFEEF2FF" Offset="0" />
                <GradientStop Color="#FFF6FBFF" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="680" Height="420" MinWidth="520" MinHeight="320" CornerRadius="18" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Left illustration -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12">
                    <Viewbox Width="64" Height="64">
                        <Canvas Width="64" Height="64">
                            <Path Data="M4,28 L32,8 L60,28 Z" Fill="#10B981" />
                            <Path Data="M8,28 L8,52 L56,52 L56,28 Z" Fill="#10B981" Opacity="0.95" />
                            <Path Data="M26,36 L26,52 L38,52 L38,36 Z" Fill="#065F46" />
                            <Path Data="M32,36 L32,52" Stroke="#064E3B" StrokeThickness="1" />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Đăng ký tài khoản" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center" />
                    <TextBlock Text="Tạo tài khoản quản trị cho kho hàng" FontSize="12" Foreground="#6B7280" TextAlignment="Center" Margin="0,8,0,0" />
                </StackPanel>

                <!-- Right form -->
                <StackPanel Grid.Column="1" Margin="8" VerticalAlignment="Center">
                    <TextBlock Text="Thông tin đăng ký" FontSize="20" FontWeight="Bold" Foreground="#111827" />
                    <TextBlock Text="Nhập tên đăng nhập, mật khẩu, vai trò. Nếu chọn Admin: phải chọn kho. Nếu chọn Chủ kho: sẽ tạo kho sau." FontSize="12" Foreground="#6B7280" Margin="0,6,0,12" />

                    <Border Style="{StaticResource InputBoxStyle}">
                        <DockPanel>
                            <TextBlock Text="👤" FontSize="14" VerticalAlignment="Center" Margin="4" />
                            <TextBox x:Name="TxtUsername" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Padding="4"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource InputBoxStyle}">
                        <DockPanel>
                            <TextBlock Text="🔒" FontSize="14" VerticalAlignment="Center" Margin="4" />
                            <PasswordBox x:Name="Pwd" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Padding="4" />
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource InputBoxStyle}">
                        <DockPanel>
                            <TextBlock Text="⭐" FontSize="14" VerticalAlignment="Center" Margin="4" />
                            <ComboBox x:Name="CmbRole" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Padding="4" SelectionChanged="CmbRole_SelectionChanged">
                                <ComboBoxItem Content="Chủ kho" IsSelected="True" />
                                <ComboBoxItem Content="Admin" />
                            </ComboBox>
                        </DockPanel>
                    </Border>

                    <Border x:Name="WarehouseContainer" Style="{StaticResource InputBoxStyle}">
                        <DockPanel>
                            <TextBlock Text="🏬" FontSize="14" VerticalAlignment="Center" Margin="4" />
                            <ComboBox x:Name="CmbWarehouse" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Padding="4"
                                      DisplayMemberPath="Name" SelectedValuePath="Id" />
                        </DockPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,12,0,0">
                        <Button x:Name="BtnSave" Style="{StaticResource PrimaryButton}" Background="#10B981" Content="Đăng ký" Width="160" Click="BtnSave_Click" />
                        <Button Content="Trở lại" Margin="12,0,0,0" Width="110" Style="{StaticResource SecondaryButton}" Click="BtnCancel_Click" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
