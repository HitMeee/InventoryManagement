<Window x:Class="InventoryManagement.Views.InventoryTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giao dịch kho" 
        Width="500" Height="400"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TxtTitle" Grid.Row="0" Text="Nhập hàng" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="#0F274C" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Product Info -->
        <Border Grid.Row="1" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Thông tin sản phẩm" 
                           FontWeight="SemiBold" FontSize="14" 
                           Foreground="#0F274C" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Tên sản phẩm: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtProductName" Text="" FontWeight="Bold" Foreground="#1976D2"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="Số lượng hiện tại: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtCurrentQuantity" Text="" FontWeight="Bold" Foreground="#2E7D32"/>
                    <TextBlock x:Name="TxtUnit" Text="" FontWeight="Bold" Foreground="#2E7D32" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transaction Type -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Loại giao dịch" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RbImport" Content="Nhập hàng" 
                             FontSize="13" Margin="0,0,20,0" 
                             IsChecked="True"
                             Checked="TransactionType_Changed"/>
                <RadioButton x:Name="RbExport" Content="Xuất hàng" 
                             FontSize="13"
                             Checked="TransactionType_Changed"/>
            </StackPanel>
        </StackPanel>

        <!-- Quantity -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Số lượng" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <TextBox x:Name="TxtQuantity" Height="35" 
                     FontSize="14" Padding="10,8"
                     BorderBrush="#BBDEFB" BorderThickness="2"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Note -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Ghi chú (không bắt buộc)" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <TextBox x:Name="TxtNote" Height="60" 
                     FontSize="14" Padding="10,8"
                     BorderBrush="#BBDEFB" BorderThickness="2"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </StackPanel>

        <!-- Warning for Export -->
        <Border x:Name="WarningPanel" Grid.Row="5" 
                Background="#FFF3CD" BorderBrush="#F0AD4E" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,15"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="TxtWarning" 
                           Text="Cảnh báo: Số lượng xuất không được vượt quá số lượng hiện có!"
                           Foreground="#856404" FontSize="13" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="BtnSave" Grid.Column="1" Content="Lưu" 
                    Width="80" Height="35" Margin="0,0,10,0"
                    Background="#1976D2" Foreground="White" 
                    BorderThickness="0" FontWeight="SemiBold"
                    Click="BtnSave_Click"/>
            
            <Button x:Name="BtnCancel" Grid.Column="2" Content="Hủy" 
                    Width="80" Height="35"
                    Background="#757575" Foreground="White" 
                    BorderThickness="0" FontWeight="SemiBold"
                    Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window>